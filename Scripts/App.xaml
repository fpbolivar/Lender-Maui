<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lender"
             xmlns:converters="clr-namespace:Lender.Converters"
             x:Class="Lender.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Value Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringNullOrEmptyConverter x:Key="StringNullOrEmptyConverter" />
            
            <!-- Global Styles for Edge-to-Edge Layout -->
            <Style TargetType="ContentPage">
                <Setter Property="SafeAreaEdges" Value="None" />
                <Setter Property="Padding" Value="0" />
            </Style>
            
            <Style TargetType="Grid">
                <Setter Property="SafeAreaEdges" Value="None" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
