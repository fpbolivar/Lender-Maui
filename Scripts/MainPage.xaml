<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lender.MainPage"
             Title="Lender"
             BackgroundColor="#0A1929"
             Padding="0"
             SafeAreaEdges="None">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="DarkBg">#0A1929</Color>
            <Color x:Key="CardBg">#132F4C</Color>
            <Color x:Key="AccentOrange">#FF9F43</Color>
            <Color x:Key="AccentGreen">#1ABC9C</Color>
            <Color x:Key="TextLight">#B0BEC5</Color>
            <Color x:Key="TextWhite">#FFFFFF</Color>
            <Color x:Key="RedAlert">#EF4444</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Padding="0" BackgroundColor="{StaticResource DarkBg}" SafeAreaEdges="None">
        <VerticalStackLayout Grid.Row="0" Padding="16,50,16,16" Spacing="20" BackgroundColor="{StaticResource DarkBg}">
            
            <!-- Header with Menu Button -->
            <HorizontalStackLayout Spacing="12">
                <Button Text="☰"
                        Command="{Binding MenuCommand}"
                        FontSize="24"
                        TextColor="{StaticResource TextWhite}"
                        BackgroundColor="{StaticResource CardBg}"
                        WidthRequest="44"
                        HeightRequest="44"
                        CornerRadius="8"
                        Padding="0"
                        InputTransparent="False"
                        VerticalOptions="Center"
                        HorizontalOptions="Start" />
                        
                  <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center" Spacing="0">
                      <Label Text="{Binding UserName}" 
                          FontSize="28" 
                          FontAttributes="Bold"
                          TextColor="{StaticResource TextWhite}" />
                      <Label Text="{Binding ModeLabel}" 
                          FontSize="12"
                          TextColor="{StaticResource TextLight}" />
                  </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Scrollable Content Area -->
        <ScrollView Grid.Row="1" BackgroundColor="{StaticResource DarkBg}" SafeAreaEdges="None">
            <VerticalStackLayout Padding="16,0,16,16" Spacing="20" BackgroundColor="{StaticResource DarkBg}" SafeAreaEdges="None">

            <!-- User Info Card -->
            <Frame CornerRadius="12"
                   BorderColor="{StaticResource CardBg}"
                   BackgroundColor="{StaticResource CardBg}"
                   HasShadow="True"
                   Padding="16">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="12" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                        <VerticalStackLayout Spacing="4" HorizontalOptions="StartAndExpand">
                            <Label Text="{Binding UserName}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextWhite}" />
                            <Label Text="{Binding UserEmail}" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding PhoneNumber}" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding DateOfBirthDisplay, StringFormat='DOB: {0}'}" FontSize="12" TextColor="{StaticResource TextLight}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Spacing="4" HorizontalOptions="End" WidthRequest="120">
                            <Label Text="Balance" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding BalanceUser, StringFormat='${0:F2}'}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource AccentOrange}" />
                            <Label Text="Credit Score" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding CreditScoreUser}" FontSize="16" TextColor="{StaticResource TextWhite}" />
                            <Label Text="{Binding Status}" FontSize="12" TextColor="{StaticResource AccentGreen}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Loan Overview -->
            <Frame CornerRadius="12" 
                   BorderColor="{StaticResource CardBg}" 
                   BackgroundColor="{StaticResource CardBg}"
                   HasShadow="True"
                   Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Loan Overview" 
                           FontSize="14" 
                           TextColor="{StaticResource TextLight}" />

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="4">
                            <Label Text="Total Lent" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding TotalLentAmount, StringFormat='${0:F2}'}" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource AccentOrange}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="4">
                            <Label Text="Total Borrowed" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding TotalBorrowedAmount, StringFormat='${0:F2}'}" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource TextWhite}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="4">
                            <Label Text="Expected Return" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding ExpectedReturn, StringFormat='${0:F2}'}" FontSize="18" TextColor="{StaticResource AccentGreen}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="4">
                            <Label Text="Next Payment" FontSize="12" TextColor="{StaticResource TextLight}" />
                            <Label Text="{Binding NextPaymentDisplay}" FontSize="14" TextColor="{StaticResource TextWhite}" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Active Loans -->
            <VerticalStackLayout Spacing="12" IsVisible="{Binding IsDemoMode}">
                <HorizontalStackLayout Spacing="12">
                    <Label Text="LOANS TO REVIEW" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextLight}"
                           HorizontalOptions="StartAndExpand" />
                    <Label Text="View all >" 
                           FontSize="12" 
                           TextColor="{StaticResource TextLight}" />
                </HorizontalStackLayout>

                  <Label Text="Pending Requests" 
                      FontSize="14" 
                      TextColor="{StaticResource TextLight}"
                      Margin="0,8,0,8" />

                <VerticalStackLayout BindableLayout.ItemsSource="{Binding RecentLoans}"
                                      Spacing="8"
                                      Margin="0,0,0,8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="12" 
                                   BorderColor="{StaticResource CardBg}"
                                   BackgroundColor="{StaticResource CardBg}"
                                   Padding="12"
                                   Margin="0,2,0,2">
                                <HorizontalStackLayout Spacing="12" Padding="4">
                                    <!-- Avatar Placeholder -->
                                    <Frame CornerRadius="20"
                                           WidthRequest="40"
                                           HeightRequest="40"
                                           HasShadow="False"
                                           BorderColor="{StaticResource CardBg}"
                                           BackgroundColor="{StaticResource DarkBg}"
                                           VerticalOptions="Center">
                                        <Label Text="{Binding UserName}"
                                               VerticalTextAlignment="Center"
                                               HorizontalTextAlignment="Center"
                                               FontSize="12"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource AccentOrange}" />
                                    </Frame>

                                    <!-- Loan Info -->
                                    <VerticalStackLayout Spacing="4" HorizontalOptions="StartAndExpand">
                                        <Label Text="{Binding UserName}" 
                                               FontSize="14" 
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextWhite}" />
                                        <Label Text="{Binding Description}" 
                                               FontSize="12" 
                                               TextColor="{StaticResource TextLight}" />
                                    </VerticalStackLayout>

                                    <!-- Amount -->
                                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                        <Label Text="{Binding Amount, StringFormat='${0:F2}'}" 
                                               FontSize="14" 
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextWhite}" />
                                        <Label Text="{Binding Status}" 
                                               FontSize="10" 
                                               TextColor="{StaticResource AccentOrange}" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

                <Button Text="REVIEW REQUESTS" 
                        BackgroundColor="{StaticResource AccentOrange}"
                        TextColor="{StaticResource DarkBg}"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        FontSize="12"
                        Padding="12,8"
                        Margin="0,8,0,8" />
            </VerticalStackLayout>
            
            <!-- No Loans Message (Live Mode) -->
            <VerticalStackLayout Spacing="12" IsVisible="{Binding IsDemoMode, Converter={StaticResource InvertedBoolConverter}}" Padding="20" VerticalOptions="Center">
                <Label Text="No active loans" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextLight}"
                       HorizontalTextAlignment="Center" />
                <Label Text="Create your first loan to get started" 
                       FontSize="14" 
                       TextColor="{StaticResource TextLight}"
                       HorizontalTextAlignment="Center" />
                <Button Text="CREATE LOAN" 
                        BackgroundColor="{StaticResource AccentOrange}"
                        TextColor="{StaticResource DarkBg}"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        FontSize="14"
                        Padding="16,12"
                        Margin="0,20,0,0"
                        HorizontalOptions="Center" />
            </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*,*" BackgroundColor="{StaticResource CardBg}" Padding="8,12,8,32" SafeAreaEdges="None">
            <!-- Transactions -->
            <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToTransactionsCommand}" />
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="💳" FontSize="22" HorizontalTextAlignment="Center" />
                <Label Text="Transactions" FontSize="10" TextColor="{StaticResource TextLight}" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
            
            <!-- Dashboard -->
            <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}" />
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="📊" FontSize="22" HorizontalTextAlignment="Center" />
                <Label Text="Dashboard" FontSize="10" TextColor="{StaticResource AccentOrange}" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
            
            <!-- Request/Send Loan (Main) -->
            <VerticalStackLayout Grid.Column="2" Spacing="4" HorizontalOptions="Center" Margin="0,-20,0,0">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToRequestLoanCommand}" />
                </VerticalStackLayout.GestureRecognizers>
                <Frame CornerRadius="30" 
                       BackgroundColor="{StaticResource AccentOrange}" 
                       Padding="16" 
                       HasShadow="True"
                       HeightRequest="60"
                       WidthRequest="60">
                    <Label Text="+" FontSize="32" TextColor="{StaticResource DarkBg}" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Margin="0,-8,0,0" />
                </Frame>
                <Label Text="Request/Send" FontSize="9" TextColor="{StaticResource TextLight}" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
            
            <!-- Loan Calculator -->
            <VerticalStackLayout Grid.Column="3" Spacing="4" HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToCalculatorCommand}" />
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="🧮" FontSize="22" HorizontalTextAlignment="Center" />
                <Label Text="Calculator" FontSize="10" TextColor="{StaticResource TextLight}" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
            
            <!-- Profile -->
            <VerticalStackLayout Grid.Column="4" Spacing="4" HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}" />
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="👤" FontSize="22" HorizontalTextAlignment="Center" />
                <Label Text="Profile" FontSize="10" TextColor="{StaticResource TextLight}" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
