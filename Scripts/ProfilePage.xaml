<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:views="clr-namespace:Lender.Views"
                      x:Class="Lender.ProfilePage"
                      Title="Settings"
                      BackgroundColor="#0A1929">

       <ContentPage.Resources>
              <ResourceDictionary>
                     <Color x:Key="DarkBg">#0A1929</Color>
                     <Color x:Key="CardBg">#132F4C</Color>
                     <Color x:Key="AccentOrange">#FF9F43</Color>
                     <Color x:Key="AccentGreen">#1ABC9C</Color>
                     <Color x:Key="TextLight">#B0BEC5</Color>
                     <Color x:Key="TextWhite">#FFFFFF</Color>
              </ResourceDictionary>
       </ContentPage.Resources>

       <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="{StaticResource DarkBg}" Padding="0" SafeAreaEdges="None">
              <Grid.GestureRecognizers>
                     <SwipeGestureRecognizer Direction="Right" Command="{Binding NavigateToCalculatorCommand}" />
              </Grid.GestureRecognizers>
              <!-- Main Content -->
              <ScrollView Grid.Row="1" Margin="0,10,0,0">
                     <VerticalStackLayout Padding="20,10,20,140" Spacing="15">
                <Label Text="Profile &amp; Settings" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="0,40,0,10" />

            <!-- User Profile Section -->
            <Label Text="{Binding UserInitials}"
                   FontSize="48"
                   FontAttributes="Bold"
                   TextColor="#FF9F43"
                   HorizontalTextAlignment="Center"
                   WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="#132F4C"
                   VerticalTextAlignment="Center"
                   Margin="0,10,0,10" />
               
            <Label Text="{Binding UserName}"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />
               
            <Label Text="{Binding UserEmail}"
                   FontSize="14"
                   TextColor="#B0BEC5"
                   HorizontalTextAlignment="Center" />

            <Label Text="{Binding PhoneNumber, StringFormat='Phone: {0}'}"
                   FontSize="13"
                   TextColor="#B0BEC5"
                   HorizontalTextAlignment="Center" />

            <BoxView Color="#1E3A5F" HeightRequest="1" Margin="0,15,0,10" />

            <!-- Account Information -->
            <Label Text="Account Information" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#FF9F43"
                   Margin="0,5,0,10" />

            <Label Text="{Binding DateOfBirth, StringFormat='Date of Birth: {0}'}"
                   FontSize="14"
                   TextColor="White" />

            <Label Text="{Binding MemberSince, StringFormat='Member Since: {0}'}"
                   FontSize="14"
                   TextColor="White" />

            <Label Text="{Binding Balance, StringFormat='Account Balance: ${0:F2}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#1ABC9C" />

            <BoxView Color="#1E3A5F" HeightRequest="1" Margin="0,15,0,10" />

            <!-- Account Settings -->
            <Label Text="Account Settings" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#FF9F43"
                   Margin="0,5,0,10" />

            <Button Text="âœï¸ Edit Profile Name"
                    Command="{Binding EditProfileCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="ðŸ“§ Change Email Address"
                    Command="{Binding ChangeEmailCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="ðŸ”’ Change Password"
                    Command="{Binding ChangePasswordCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="ðŸ“± Change Phone Number"
                    Command="{Binding ChangePhoneCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <BoxView Color="#1E3A5F" HeightRequest="1" Margin="0,15,0,10" />

            <!-- App Settings -->
            <Label Text="App Settings" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#FF9F43"
                   Margin="0,5,0,10" />

            <Button Text="ðŸ”” Notifications"
                    Command="{Binding NotificationsCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="ðŸŒ Language &amp; Region"
                    Command="{Binding LanguageCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="ðŸ” Privacy &amp; Security"
                    Command="{Binding PrivacyCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="â„¹ï¸ About &amp; Help"
                    Command="{Binding AboutCommand}"
                    BackgroundColor="#132F4C"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <BoxView Color="#1E3A5F" HeightRequest="1" Margin="0,15,0,10" />

            <!-- Danger Zone -->
            <Label Text="Danger Zone" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#EF4444"
                   Margin="0,5,0,10" />

            <Button Text="ðŸšª Sign Out"
                    Command="{Binding SignOutCommand}"
                    BackgroundColor="#EF4444"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12" />

            <Button Text="ðŸ—‘ï¸ Delete Account"
                    Command="{Binding DeleteAccountCommand}"
                    BackgroundColor="#991B1B"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,12"
                    Margin="0,0,0,20" />
            </VerticalStackLayout>
        </ScrollView>

              <views:BottomNavView Grid.Row="2" SelectedTab="Profile" />
    </Grid>
</ContentPage>
